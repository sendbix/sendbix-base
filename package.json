{
  "name": "sendbix-base",
  "license": "MIT",
  "description": "Sendbix base",
  "version": "1.1.0",
  "author": "sendbix",
  "repository": {
    "type": "git",
    "url": "git@github.com:sendbix/sendbix-base.git"
  },
  "keywords": [
    "email template builder"
  ],
  "files": [
    "lib"
  ],
  "main": "lib/index.cjs.js",
  "module": "lib/index.es.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "dev": "yarn build --watch",
    "typings": "tsc --declaration --emitDeclarationOnly --project tsconfig.lib.json",
    "build": "rimraf lib  && npm run typings && tsc-alias  && vite build --config vite.config.ts",
    "block": "ts-node -r tsconfig-paths/register scripts/generateBlockJSX.ts",
    "format": "eslint --fix  --ext .tsx,.ts,.tsx src/",
    "test": "jest  --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn test && yarn lint-staged"
    }
  },
  "lint-staged": {
    "src/*.{js,jsx,ts,tsx}, example/*.{js,jsx,ts,tsx}": [
      "yarn lint"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.27.3",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@eslint/config-array": "^0.20.0",
    "@eslint/object-schema": "^2.1.6",
    "@types/he": "^1.2.3",
    "@types/jest": "^29.5.14",
    "@types/js-beautify": "^1.14.3",
    "@types/jsdom": "^21.1.7",
    "@types/lodash": "^4.17.17",
    "@types/node": "^22.15.24",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.5",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.33.0",
    "babel-jest": "^30.0.0-beta.3",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-webpack-plugin": "^5.0.1",
    "jest": "^29.7.0",
    "jsdom": "^26.1.0",
    "liquidjs": "^10.21.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3",
    "vite": "^6.3.5"
  },
  "dependencies": {
    "glob": "^11.0.2",
    "he": "^1.2.0",
    "js-beautify": "^1.15.4",
    "lodash": "^4.17.21",
    "uuid": "^11.1.0"
  },
  "peerDependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  }
}
